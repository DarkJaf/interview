version: '3'
services:
  webserver:
    build: . 
      
      
    ports:
      - "80:80"
      - "2222:22"  # SSH порт для Ansible
    environment:
      - USERNAME=${USERNAME}
      - PASSWORD=${PASSWORD}
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf  # Подключаем кастомный конфиг>
      - ./static:/usr/share/nginx/html/images    # Папка для статики
    container_name: ansible-test-new
